'use strict';
const Generator = require('yeoman-generator');
const chalk = require('chalk');
const yosay = require('yosay');

module.exports = class extends Generator {
  constructor(args, opts) {
    super(args, opts);
    this.argument('name', {type: String, required: true});
    this.argument('templateDef', {type: Object, required: true});
  }

  prompting() {
    // Have Yeoman greet the user.
    this.log(
      yosay(`Welcome to the exceptional ${chalk.red('generator-tari-template-web')} generator!`)
    );

    return;

    //const prompts = [
    //{
    //type: 'confirm',
    //name: 'someAnswer',
    //message: 'Would you like to enable this option?',
    //default: true
    //}
    //];

    //return this.prompt(prompts).then(props => {
    //// To access props later use this.props.someAnswer;
    //this.props = props;
    //});
  }

  writing() {
    this.fs.copyTpl(this.templatePath('dummyfile.txt'), this.destinationPath('dummyfile.txt'), {
      templateDef: JSON.parse(this.options.templateDef),
    });
  }

  install() {
    //this.installDependencies();
  }
};
